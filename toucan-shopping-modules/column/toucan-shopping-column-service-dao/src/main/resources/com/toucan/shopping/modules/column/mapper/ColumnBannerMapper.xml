<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toucan.shopping.modules.column.mapper.ColumnBannerMapper">

    <resultMap id="columnBannerMap" type="com.toucan.shopping.modules.column.entity.ColumnBanner" >
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="column_id" jdbcType="BIGINT" property="columnId" />
        <result column="position" jdbcType="INTEGER" property="position" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
        <result column="create_admin_id" jdbcType="VARCHAR" property="createAdminId" />
        <result column="update_admin_id" jdbcType="VARCHAR" property="updateAdminId" />
        <result column="delete_status" jdbcType="INTEGER" property="deleteStatus" />
        <result column="app_code" jdbcType="VARCHAR" property="appCode" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="img_path" jdbcType="VARCHAR" property="imgPath" />
        <result column="click_path" jdbcType="VARCHAR" property="clickPath" />
        <result column="banner_sort" jdbcType="VARCHAR" property="bannerSort" />
    </resultMap>

    <select id="queryList" resultMap="columnBannerMap" parameterType="com.toucan.shopping.modules.column.vo.ColumnBannerVO">
        select tc.* from t_column_banner tc
        <where>
            1=1

            <if test="id!=null">
                and tc.id = #{id}
            </if>


            <if test="columnId!=null">
                and tc.column_id = #{columnId}
            </if>

            <if test="position!=null">
                and tc.position = #{position}
            </if>

            <if test="showStatus!=null">
                and tc.show_status = #{showStatus}
            </if>


            <if test="idArray!=null and idArray.length>0  ">
                and tc.id in
                <foreach item="item" index="index" collection="idArray" open="("  close=")" separator=",">
                    #{item}
                </foreach>
            </if>


            and tc.delete_status = 0

        </where>
    </select>

    <insert id="insert" parameterType="com.toucan.shopping.modules.column.entity.ColumnBanner" useGeneratedKeys="true" keyProperty="id" >
        insert into t_column_banner(column_id,banner_id,remark,position,create_date,update_date,create_admin_id,update_admin_id,title,img_path,click_path,banner_sort)
        values(#{columnId},#{bannerId},#{remark},#{position},#{createDate},#{updateDate},#{createAdminId},#{updateAdminId},#{title},#{imgPath},#{clickPath},#{bannerSort})
    </insert>


    <select id="queryById" resultMap="columnBannerMap" parameterType="java.lang.Long">
        select * from t_column_banner where id=#{id} and delete_status=0
    </select>


    <update id="deleteById">
        update t_column_banner  set delete_status=1 where id=#{id}  and delete_status=0
    </update>


    <update id="update" parameterType="com.toucan.shopping.modules.column.entity.ColumnBanner">
        update t_column_banner set column_id=#{columnId},banner_id=#{bannerId},remark=#{remark},position=#{position},
        update_admin_id=#{updateAdminId},update_date=#{updateDate}
          where id=#{id}
    </update>


</mapper>