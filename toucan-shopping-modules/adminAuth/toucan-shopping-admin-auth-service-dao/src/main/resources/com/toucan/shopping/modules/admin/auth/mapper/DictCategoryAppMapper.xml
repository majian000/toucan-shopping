<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toucan.shopping.modules.admin.auth.mapper.DictCategoryAppMapper">

    <resultMap id="dictCategoryAppMap" type="com.toucan.shopping.modules.admin.auth.entity.DictCategoryApp" >
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="dict_category_id" jdbcType="BIGINT" property="dictCategoryId" />
        <result column="app_code" jdbcType="VARCHAR" property="appCode" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="delete_status" jdbcType="INTEGER" property="deleteStatus" />

    </resultMap>

    <resultMap id="dictCategoryAppVOMap" type="com.toucan.shopping.modules.admin.auth.vo.DictCategoryAppVO" extends="dictCategoryAppMap" >

    </resultMap>

    <select id="findListByEntity" resultMap="dictCategoryAppMap" parameterType="com.toucan.shopping.modules.admin.auth.entity.DictCategoryApp">
        select * from t_sa_dict_category_app t
        <where>
            1=1
            <if test="id!=null">
                and t.id = #{id}
            </if>
            <if test="dictCategoryId!=null">
                and t.dict_category_id = #{dictCategoryId}
            </if>
            <if test="appCode!=null and appCode!=''">
                and t.app_code = #{appCode}
            </if>
            and t.delete_status =0
        </where>

    </select>




    <insert id="insert" parameterType="com.toucan.shopping.modules.admin.auth.entity.DictCategoryApp" useGeneratedKeys="true" keyProperty="id" >
        insert into t_sa_dict_category_app(dict_category_id,app_code,create_date,delete_status,create_admin_id)
        values(#{dictCategoryId},#{appCode},#{createDate},#{deleteStatus},#{createAdminId})
    </insert>


    <update id="deleteByAppCode" parameterType="java.lang.String">
        update t_sa_dict_category_app set delete_status=1 where app_code = #{appCode} and delete_status=0
    </update>


    <update id="deleteByDictCategoryId" parameterType="java.lang.Integer">
        update t_sa_dict_category_app set delete_status=1 where dict_category_id = #{dictCategoryId} and delete_status=0
    </update>


    <update id="deleteById" parameterType="java.lang.Integer">
        update t_sa_dict_category_app set delete_status=1 where id = #{id} and delete_status=0
    </update>


</mapper>