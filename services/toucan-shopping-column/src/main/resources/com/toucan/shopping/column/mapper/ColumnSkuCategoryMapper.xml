<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toucan.shopping.column.mapper.ColumnSkuCategoryMapper">

    <resultMap id="columnSkuCategoryMap" type="com.toucan.shopping.column.entity.ColumnSkuCategory" >
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="href" jdbcType="VARCHAR" property="href" />
        <result column="position" jdbcType="INTEGER" property="position" />
        <result column="column_id" jdbcType="BIGINT" property="columnId" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
        <result column="create_admin_id" jdbcType="VARCHAR" property="createAdminId" />
        <result column="update_admin_id" jdbcType="VARCHAR" property="updateAdminId" />
        <result column="delete_status" jdbcType="INTEGER" property="deleteStatus" />
    </resultMap>

    <select id="queryList" resultMap="columnSkuCategoryMap" parameterType="com.toucan.shopping.column.vo.ColumnBannerVO">
        select tc.* from t_column_sku_category tc
        <where>
            1=1

            <if test="id!=null">
                and tc.id = #{id}
            </if>


            <if test="showStatus!=null">
                and tc.show_status = #{showStatus}
            </if>

            <if test="columnId!=null">
                and tc.column_id = #{columnId}
            </if>

            <if test="idArray!=null ">
                and tc.id in
                <foreach item="item" index="index" collection="idArray" open="("  close=")" separator=",">
                    #{item}
                </foreach>
            </if>


            and tc.delete_status = 0

        </where>
    </select>

    <insert id="insert" parameterType="com.toucan.shopping.column.entity.ColumnSkuCategory" useGeneratedKeys="true" keyProperty="id" >
        insert into t_column_sku_category(column_id,href,name,position,remark,create_date,update_date,create_admin_id,update_admin_id)
        values(#{columnId},#{href},#{name},#{position},#{remark},#{createDate},#{updateDate},#{createAdminId},#{updateAdminId})
    </insert>


    <select id="queryById" resultMap="columnSkuCategoryMap" parameterType="java.lang.Long">
        select * from t_column_sku_category where id=#{id} and delete_status=0
    </select>


    <update id="deleteById">
        update t_column_sku_category  set delete_status=1 where id=#{id}  and delete_status=0
    </update>


    <update id="update" parameterType="com.toucan.shopping.column.entity.ColumnSkuCategory">
        update t_column_sku_category set column_id=#{columnId},href=#{href},name=#{name},position=#{position},remark=#{remark},
        update_admin_id=#{updateAdminId},update_date=#{updateDate}
          where id=#{id}
    </update>


</mapper>