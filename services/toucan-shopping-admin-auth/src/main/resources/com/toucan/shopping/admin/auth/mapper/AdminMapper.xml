<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toucan.shopping.admin.auth.mapper.AdminMapper">

    <resultMap id="adminMap" type="com.toucan.shopping.admin.auth.entity.Admin" >
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="enable_status" jdbcType="INTEGER" property="enableStatus" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="delete_status" jdbcType="INTEGER" property="deleteStatus" />
        <result column="admin_id" jdbcType="VARCHAR" property="adminId" />
        
    </resultMap>


    <select id="findListByEntity" resultMap="adminMap" parameterType="com.toucan.shopping.admin.auth.entity.Admin">
        select * from t_sa_admin saa
        <where>
            1=1
            <if test="id!=null">
                and saa.id = #{id}
            </if>
            <if test="username!=null">
                and saa.username = #{username}
            </if>
                and saa.delete_status = 0
        </where>

    </select>


    <insert id="insert" parameterType="com.toucan.shopping.admin.auth.entity.Admin" useGeneratedKeys="true" keyProperty="id" >
        insert into t_sa_admin(username,password,admin_id,enable_status,create_date,delete_status,create_admin_id,remark)
        values(#{username},#{password},#{adminId},#{enableStatus},#{createDate},#{deleteStatus},#{createAdminId},#{remark})
    </insert>

</mapper>