<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toucan.shopping.center.user.mapper.UserUserNameMapper">

    <resultMap id="userUserNameMap" type="com.toucan.shopping.center.user.entity.UserUserName" >
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="enable_status" jdbcType="INTEGER" property="enableStatus" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="delete_status" jdbcType="INTEGER" property="deleteStatus" />

    </resultMap>


    <select id="findListByEntity" resultMap="userUserNameMap" parameterType="com.toucan.shopping.center.user.entity.UserUserName">
        select * from bbs_user_username bu
        <where>
            1=1
            <if test="id!=null">
                and bu.id = #{id}
            </if>
            <if test="username!=null and username!='' ">
                and bu.username = #{username}
            </if>
            <if test="userMainId!=null  ">
                and bu.user_main_id = #{userMainId}
            </if>
                and bu.delete_status = 0
        </where>

    </select>


    <insert id="insert" parameterType="com.toucan.shopping.center.user.entity.UserUserName" keyProperty="id" >
        insert into bbs_user_username(id,username,userMainId,create_date,delete_status)
        values(#{id},#{username},#{user_main_id},#{createDate},#{deleteStatus})
    </insert>

</mapper>